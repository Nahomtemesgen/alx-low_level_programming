#include "main.h"
#include <string.h>
/**
 * puts_half - puts_half print half of string
 * @str: parameter of the function
 * Return: Always 0
 */
void puts_half(char *str)
{
int n, i;
n = strlen(str);
i = 0;
if (n % 2 == 0)
{
while (i < (n / 2))
{
_putchar(str[i]);
i = i + 1;
}
}
else {
while (i < ((n - 1) / 2))
{
_putchar(str[i]);
i = i + 1;
}
}
_putchar('\n');
}
